from django.shortcuts import render

def home(request):
        return render(request, 'cactus_search/home.html')

from blog.forms import ContactForm

def search(request):
        if request.method == 'POST':  # S'il s'agit d'une requête POST
                form = ContactForm(request.POST)  # Nous reprenons les données
                
                if form.is_valid(): # Nous vérifions que les données envoyées sont valides

                        # Ici nous pouvons traiter les données du formulaire
                        keyword = form.cleaned_data['keyword']
                                                
                        # Nous pourrions ici envoyer l'e-mail grâce aux données que nous venons de récupérer
                        
                        envoi = True

                else: # Si ce n'est pas du POST, c'est probablement une requête GET
                        form = ContactForm()  # Nous créons un formulaire vide
                                        
                return render(request, 'cactus_search/search.html', locals())
